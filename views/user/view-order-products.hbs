<section>
    <div class="container pt-5 ">
        <div class="row">
            {{#each products}}
            <div class="col-lg-4 col-md-6 col-xl-3 col-12 mx-auto m-3">
                <div class="card" style="width: 18rem;">
                    <img src="/images/product-images/{{this.product._id}}.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.name}}</h5>
                        <h6 class="card-title">Rs.{{this.product.price}}</h6>
                        <p class="card-text">{{this.product.description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
