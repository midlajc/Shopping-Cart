<section>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Address</th>
                <th scope="col">Pincode</th>
                <th scope="col">Mobile</th>
                <th scope="col">Price</th>
                <th scope="col">Payment</th>
                <th scope="col">Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <td>{{date}}</td>
                <td>{{adderss.landmark}}</td>
                <td>{{adderss.mobile}}</td>
                <td>{{adderss.pincode}}</td>
                <td>Rs.{{totalAmount}}</td>
                <td>{{paymentMethod}}</td>
                <td>{{status}}</td>
                <td>
                <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">View Products</a>
                <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you want to delete {{this.name}} ?')">Cancel Order</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>