<section>
    <div class="container pt-5 ">
        <div class="row">
            {{#each products}}
            <div class="col-lg-3 col-md-6 col-xl-4 col-12 mx-auto m-3">
                <div class="card" style="width: 18rem;">
                    <img src="images/product-images/{{this._id}}.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <h6 class="card-title">Rs.{{this.price}}</h6>
                        <p class="card-text">{{this.description}}</p>
                        <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
