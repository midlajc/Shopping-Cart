<section>
    <div class="container p-5">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center">Edit Product</h2>
                <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
                {{#product}}
                    <label for="">Name</label>
                    <input type="text" name="name" class="form-control" value="{{name}}"> 

                    <label for="">Catogary</label>
                    <input type="text" name="catogary" class="form-control" value="{{catogary}}">

                    <label for="">Price</label>
                    <input type="number" name="price" class="form-control" value="{{price}}">

                    <label for="">Despription</label>
                    <input type="text" name="description" class="form-control" value="{{this.description}}">

                    <label for="">Image</label>
                    <img src="/images/product-images/{{_id}}.jpg" alt="" srcset="" class="form-control" id="imgView" style="width: 10rem;height: auto;"> 

                    <label for="">Change Image</label>
                    <input type="file" name="image" class="form-control" onchange="viewImage(event)">
                {{/product}}
                    <button type="submit" class="btn btn-success mt-3">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>